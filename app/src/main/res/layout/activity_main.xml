<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="216dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_goto_create_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToCreateProject"
            android:text="@string/button_goto_new_project" />

        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSignInButtonPressed"
            android:text="Sign In" />

        <Button
            android:id="@+id/button_goto_view_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToViewAllProjects"
            android:text="View Projects" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>